<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@color/zhongchoutop"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="right|center"
            android:background="@drawable/click_black_to_lightblack_no_stoken"
            android:src="@drawable/back" />
        <ImageView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/top" />
        <View
            android:layout_width="@dimen/dp_2"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@color/line"
            ></View>
        <TextView
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="支付"/>

    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/dp_10"
        android:id="@+id/pay_lianlian"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/click_view_no_corners_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:src="@drawable/lianlian" />

        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连连支付"
            android:textSize="16sp"
             />
    </LinearLayout>

    <TextView
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="线下支付"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="16sp"
        />
    <LinearLayout
        android:padding="@dimen/dp_10"
        android:id="@+id/pay_alipay"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/click_view_no_corners_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@drawable/alipay" />

        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝支付"
            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/dp_10"
        android:id="@+id/pay_yinlian"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/click_view_no_corners_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@drawable/card" />

        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡支付"
            android:textSize="16sp"
            />
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"></View>
    <LinearLayout
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/click_view_no_corners_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付金额"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/money"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/redwine"
            android:text="￥100.00"
            android:textSize="16sp"
            />
    </LinearLayout>

</LinearLayout>