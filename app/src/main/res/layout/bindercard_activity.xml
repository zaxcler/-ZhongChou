<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <include layout="@layout/commontitle"></include>

    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入银行卡(买入持卡人信息必须和实名相符)"
        android:id="@+id/textView5" />

    <LinearLayout
        android:layout_margin="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        >

        <EditText
            android:padding="@dimen/dp_2"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/card_no_et"
            android:layout_weight="0.9" />

        <TextView
            android:id="@+id/band_name"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="right"
            android:textColor="@color/liangyellow"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付金额"
         />
    <TextView
        android:id="@+id/money"
        android:padding="@dimen/dp_10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="金额：0.00元"
        android:layout_margin="@dimen/dp_10"
        />

    <Button
        android:id="@+id/confirm"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:background="@drawable/button_click_liangyellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付"
        android:textColor="@color/white"
        />




</LinearLayout>