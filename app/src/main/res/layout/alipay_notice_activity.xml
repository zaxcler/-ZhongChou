<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:background="@drawable/stroke_white_soild"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:src="@drawable/alipay"
            android:layout_width="24dp"
            android:layout_height="24dp"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝账户转账"
             />

        <TextView
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/redwine"
            android:id="@+id/money" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
             />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="（转账备注”项目名称+手机号码“）"
        android:textColor="@color/redwine"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:background="@drawable/stroke_white_soild"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="账户名称"
             />

        <TextView
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="杭州聚到投资管理有限公司"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:background="@drawable/stroke_white_soild"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="支付宝账户"
            />

        <TextView
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="jdtz2015@sina.com"
            />
    </LinearLayout>

    <TextView
        android:layout_margin="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="线下打款次日上午11：00点统一确认。节假日打款的在首个工作日上午11：00确认。
客服电话：0571-86858285
微信客服：jumu86858285"
        android:layout_gravity="center_horizontal" />

    <Button
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/button_click_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:text="确定"
        android:id="@+id/confirm"
        android:layout_gravity="center_horizontal" />


</LinearLayout>