<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lianhai.zhongchou.MainActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightboro" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_height"
        android:background="@color/black"
        android:gravity="bottom"
        android:alpha="70"
        android:orientation="horizontal" >

        <LinearLayout
            android:background="@drawable/click_black_to_lightblack_no_stoken"
            android:id="@+id/index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/index_icon"
                android:layout_width="@dimen/navigation_image_width"
                android:layout_height="@dimen/navigation_image_height"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/navigation_click_page1" />

            <TextView
                android:id="@+id/index_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="首页"
                android:textColor="@color/selector_textcolor" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/click_black_to_lightblack_no_stoken"
            android:id="@+id/page2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/page2_icon"
                android:layout_width="@dimen/navigation_image_width"
                android:layout_height="@dimen/navigation_image_height"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/list" />

            <TextView
                android:id="@+id/page2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="列表"
                android:textColor="@color/liangboro" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/click_black_to_lightblack_no_stoken"
            android:id="@+id/page3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/page3_icon"
                android:layout_width="@dimen/navigation_image_width"
                android:layout_height="@dimen/navigation_image_height"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/faqi" />

            <TextView
                android:id="@+id/page3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="发起"
                android:textColor="@color/liangboro" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/click_black_to_lightblack_no_stoken"
            android:id="@+id/page4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/page4_icon"
                android:layout_width="@dimen/navigation_image_width"
                android:layout_height="@dimen/navigation_image_height"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/wo" />

            <TextView
                android:id="@+id/page4_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="我"
                android:textColor="@color/liangboro" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
